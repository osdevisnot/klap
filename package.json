{
  "name": "klap",
  "version": "0.0.0-development",
  "description": "zero config, zero dependency bundler for tiny javascript packages.",
  "repository": "osdevisnot/klap",
  "license": "MIT",
  "author": "osdevisnot <osdevisnot@gmail.com>",
  "files": [
    "dist",
    "docs"
  ],
  "main": "dist/index.js",
  "bin": {
    "klap": "cli.js"
  },
  "scripts": {
    "prebuild": "patch-package",
    "build": "ncc build src/klap.js -mo dist",
    "prepare": "yarn build",
    "semantic-release": "semantic-release",
    "presetup": "git clean -fdX",
    "setup": "yarn",
    "test": "echo 'run ./test.sh'",
    "watch": "yarn build --watch"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "prettier": "@osdevisnot/prettier",
  "devDependencies": {
    "@babel/core": "7.8.4",
    "@babel/plugin-proposal-class-properties": "7.8.3",
    "@babel/plugin-proposal-decorators": "7.8.3",
    "@babel/plugin-proposal-object-rest-spread": "7.8.3",
    "@babel/plugin-transform-regenerator": "7.8.3",
    "@babel/preset-env": "7.8.4",
    "@babel/preset-react": "7.8.3",
    "@babel/preset-typescript": "7.8.3",
    "@osdevisnot/prettier": "4.2.0",
    "@rollup/plugin-commonjs": "11.0.2",
    "@rollup/plugin-json": "4.0.2",
    "@rollup/plugin-node-resolve": "7.1.1",
    "@rollup/plugin-replace": "2.3.1",
    "@types/node": "13.7.0",
    "@zeit/ncc": "0.21.0",
    "babel-plugin-macros": "2.8.0",
    "babel-plugin-styled-components": "1.10.7",
    "babel-plugin-transform-async-to-promises": "0.8.15",
    "cz-conventional-changelog": "3.1.0",
    "deepmerge": "4.2.2",
    "del": "5.1.0",
    "getopts": "2.2.5",
    "gzip-size": "5.1.1",
    "kleur": "3.0.3",
    "mkdirp": "1.0.3",
    "patch-package": "6.2.0",
    "pretty-bytes": "5.3.0",
    "rollup": "1.31.0",
    "rollup-plugin-babel": "4.3.3",
    "rollup-plugin-node-globals": "1.4.0",
    "rollup-pluginutils": "2.8.2",
    "semantic-release": "17.0.2",
    "servor": "3.1.0",
    "sort-package-json": "1.39.1",
    "terser": "4.6.3",
    "typescript": "3.7.5"
  }
}
