{
	"name": "klap",
	"version": "0.2.1",
	"description": "zero config, zero dependency bundler for tiny javascript packages.",
	"repository": "osdevisnot/klap",
	"license": "MIT",
	"author": "osdevisnot <osdevisnot@gmail.com>",
	"files": [
		"dist"
	],
	"main": "dist/index.js",
	"bin": {
		"klap": "dist/index.js"
	},
	"scripts": {
		"build": "ncc build src/cli.js -o dist",
		"pub": "git clean -fdX && npm install && npm run build && npm link && npm version",
		"postpub": "npm publish",
		"watch": "ncc build src/cli.js -wo dist"
	},
	"devDependencies": {
		"@babel/core": "7.6.4",
		"@babel/plugin-proposal-class-properties": "7.5.5",
		"@babel/plugin-proposal-object-rest-spread": "7.6.2",
		"@babel/plugin-transform-regenerator": "7.4.5",
		"@babel/preset-env": "7.6.3",
		"@babel/preset-react": "7.6.3",
		"@babel/preset-typescript": "7.6.0",
		"@types/node": "12.11.2",
		"@zeit/ncc": "0.20.5",
		"babel-plugin-macros": "2.6.1",
		"deepmerge": "4.2.0",
		"gzip-size": "5.1.1",
		"kleur": "3.0.3",
		"mkdirp": "0.5.1",
		"pretty-bytes": "5.3.0",
		"rollup": "1.25.1",
		"rollup-plugin-babel": "4.3.3",
		"rollup-plugin-commonjs": "10.1.0",
		"rollup-plugin-json": "4.0.0",
		"rollup-plugin-node-globals": "1.4.0",
		"rollup-plugin-node-resolve": "5.2.0",
		"rollup-plugin-replace": "2.2.0",
		"rollup-pluginutils": "2.8.2",
		"servor": "github:lukejacksonn/servor#v2",
		"sort-package-json": "1.22.1",
		"terser": "4.3.9"
	}
}
