{
  "name": "klap",
  "version": "0.0.0-development",
  "description": "zero config, zero dependency bundler for tiny javascript packages.",
  "repository": "osdevisnot/klap",
  "license": "MIT",
  "author": "osdevisnot <osdevisnot@gmail.com>",
  "files": [
    "dist",
    "docs"
  ],
  "main": "dist/index.js",
  "bin": {
    "klap": "cli.js"
  },
  "scripts": {
    "prebuild": "patch-package",
    "build": "ncc build src/klap.js -mo dist",
    "prepare": "yarn build",
    "prepub": "yarn setup",
    "pub": "yarn build && npm version",
    "postpub": "yarn publish",
    "semantic-release": "semantic-release",
    "presetup": "git clean -fdX",
    "setup": "yarn",
    "test": "echo 'run ./test.sh'",
    "watch": "ncc build src/klap.js -wo dist"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "prettier": "@osdevisnot/prettier",
  "devDependencies": {
    "@babel/core": "7.7.7",
    "@babel/plugin-proposal-class-properties": "7.7.4",
    "@babel/plugin-proposal-object-rest-spread": "7.7.7",
    "@babel/plugin-transform-regenerator": "7.7.5",
    "@babel/preset-env": "7.7.7",
    "@babel/preset-react": "7.7.4",
    "@babel/preset-typescript": "7.7.7",
    "@osdevisnot/prettier": "4.0.0",
    "@rollup/plugin-replace": "2.3.0",
    "@types/node": "12.12.21",
    "@zeit/ncc": "0.20.5",
    "babel-plugin-macros": "2.8.0",
    "babel-plugin-styled-components": "1.10.6",
    "babel-plugin-transform-async-to-promises": "0.8.15",
    "cz-conventional-changelog": "3.0.2",
    "deepmerge": "4.2.2",
    "del": "5.1.0",
    "getopts": "2.2.5",
    "gzip-size": "5.1.1",
    "kleur": "3.0.3",
    "mkdirp": "0.5.1",
    "patch-package": "6.2.0",
    "pretty-bytes": "5.3.0",
    "rollup": "1.27.14",
    "rollup-plugin-babel": "4.3.3",
    "rollup-plugin-commonjs": "10.1.0",
    "rollup-plugin-json": "4.0.0",
    "rollup-plugin-node-globals": "1.4.0",
    "rollup-plugin-node-resolve": "5.2.0",
    "rollup-plugin-sourcemaps": "0.4.2",
    "rollup-pluginutils": "2.8.2",
    "semantic-release": "15.14.0",
    "servor": "3.0.5",
    "sort-package-json": "1.31.0",
    "terser": "4.4.3",
    "typescript": "3.7.4"
  }
}
